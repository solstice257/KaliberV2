
@{
    ViewData["Title"] = "AddBook";
}

@model Interfaces.DTO.BookDTO


<!DOCTYPE html>

<html>
<head>
    <title>Index</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
</head>
<body>

    @using (Html.BeginForm("AddBook", "Book", FormMethod.Post, new { enctype = "multiplart/form-data" }))
    {
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Book</th>
        </tr>
        <tr>
            <td>ISBN: </td>
            <td>
                @Html.TextBoxFor(m => m.ISBN)
            </td>
        </tr>
        <tr>
            <td>Titel: </td>
            <td>
                @Html.TextBoxFor(m => m.Title)
            </td>
        </tr>
        <tr>
            <td>Ondertitel: </td>
            <td>
                @Html.TextBoxFor(m => m.Subtitle)
            </td>
        </tr>
        <tr>
            <td>Voornaam auteur: </td>
            <td>
                @Html.TextBoxFor(m => m.author.Firstname)
            </td>
        </tr>
        <tr>
            <td>Tussenvoegsel: </td>
            <td>
                @Html.TextBoxFor(m => m.author.Preposition)
            </td>
        </tr>
        <tr>
            <td>Achternaam auteur: </td>
            <td>
                @Html.TextBoxFor(m => m.author.Lastname)
            </td>
        </tr>
        <tr>
            <td>Uitgever: </td>
            <td>
                @Html.TextBoxFor(m => m.publisher)
            </td>
        </tr>
        <tr>
            <td>Categorie: </td>
            <td>
                @Html.TextBoxFor(m => m.Category)
            </td>
        </tr>
        <tr>
            <td>Jaar van Uitgave: </td>
            <td>
                @Html.TextBoxFor(m => m.Year_of_publication)
            </td>
        </tr>
        @*<tr>
            <td>Cover afbeelding: </td>
            <td>
                <input type="file" name="Image"/>
                <br />
            </td>
        </tr>*@
        <tr>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
    }
    <script src="js/jquery-2.1.4.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>
